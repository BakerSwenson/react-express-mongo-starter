{
  "name": "react-starter",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production browserify ./public/components/**/* | uglifyjs -cm > public/bundle.js",
    "build-heroku": "browserify -t reactify ./public/components/**/* | uglifyjs -mc > public/bundle.js",
    "start": "nodemon server.js",
    "watch": "watchify public/components/**/* -o public/bundle.js -dv",
    "postinstall" : "npm run build-heroku"
  },
  "dependencies": {
    "body-parser": "~1.14.1",
    "browserify": "^10.2.6",
    "cors": "^2.7.1",
    "ecstatic": "~0.8.0",
    "express": "~4.0.0",
    "history": "^1.13.1",
    "mongoose": "~4.2.6",
    "nodemon": "^1.8.1",
    "react": "~0.13.3",
    "react-dom": "^0.14.3",
    "react-router": "^1.0.0",
    "reactify": "^1.1.1",
    "socket.io": "^1.3.7",
    "uglify-js": "^2.4.24",
    "watchify": "^3.2.3",
    "babelify": "^6.1.2"
  },
  "license": "public domain",
  "devDependencies": {
    "babelify": "^6.1.2"
  }
}


